<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppEmpresa.Views.Auditoria.VExpedicaoEcommerce"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="VExpedicaoEcommerce">
    <Grid>
        <Image
            Aspect="AspectFill"
            HorizontalOptions="Fill"
            Source="background1.png"
            VerticalOptions="Fill" />
        <ActivityIndicator
            x:Name="LoadingIndicator"
            HorizontalOptions="CenterAndExpand"
            IsRunning="False"
            IsVisible="False"
            VerticalOptions="CenterAndExpand"
            Color="White" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="90" />
                <RowDefinition Height="120" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Frame
                BackgroundColor="White"
                BorderColor="Transparent"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <Label
                    FontSize="16"
                    HorizontalOptions="CenterAndExpand"
                    Style="{StaticResource labelInfos}"
                    Text="EXPEDIÇÃO E-COMMERCE"
                    VerticalOptions="CenterAndExpand" />
            </Frame>

            <Frame
                Grid.Row="1"
                Margin="5,5,5,0"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand"
                Style="{StaticResource frameView}"
                VerticalOptions="FillAndExpand">
                <Picker
                    Title="Selecione a transportadora..."
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Style="{StaticResource PickerPadrao}"
                    VerticalOptions="FillAndExpand" />
            </Frame>

            <Frame
                Grid.Row="2"
                Margin="5,5,5,0"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand"
                Style="{StaticResource frameView}"
                VerticalOptions="FillAndExpand">

                <Entry
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Start"
                    Placeholder="Código da etiqueta..."
                    PlaceholderColor="Gray"
                    Style="{StaticResource entryItem}"
                    VerticalOptions="EndAndExpand" />
            </Frame>

            <Frame
                Grid.Row="3"
                Margin="5,5,5,0"
                Padding="5"
                BackgroundColor="White"
                BorderColor="Transparent"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical">

                    <!--  Linha 1  -->
                    <StackLayout
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="Nota:" />
                        <Label
                            x:Name="lblNota"
                            FontSize="16"
                            HorizontalOptions="StartAndExpand"
                            Style="{StaticResource labelInfos}"
                            Text="0" />
                    </StackLayout>
                    <!--  Linha 2  -->
                    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="Volume:" />
                        <Label
                            x:Name="lblVol1"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="0" />
                        <Label
                            FontSize="16"
                            Style="{StaticResource labelInfos}"
                            Text="de" />
                        <Label
                            x:Name="lblVol2"
                            FontSize="16"
                            Style="{StaticResource labelInfos}"
                            Text="0" />

                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame
                Grid.Row="4"
                Margin="5,5,5,0"
                Padding="5"
                BackgroundColor="White"
                BorderColor="Transparent"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical">
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource labelInfos}"
                        Text="Total de Volumes" />

                    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="Volume Total:" />
                        <Label
                            x:Name="lblVolTotal"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="0" />
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="Embarcados:" />
                        <Label
                            x:Name="lblEmbarcados"
                            FontSize="16"
                            HorizontalOptions="Start"
                            Style="{StaticResource labelInfos}"
                            Text="0" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Button
                x:Name="btnConferirNotas"
                Grid.Row="6"
                Margin="5"
                Clicked="btnConferirNotas_Clicked"
                Style="{StaticResource btnSimples}"
                Text="CONFERIR NOTAS" />

            <Button
                x:Name="btnProdBipado"
                Grid.Row="7"
                Margin="5"
                Clicked="btnProdBipado_Clicked"
                Style="{StaticResource btnSimples}"
                Text="PRODUTOS BIPADOS" />

        </Grid>
    </Grid>
</ContentPage>